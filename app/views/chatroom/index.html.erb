<h4 class="ui center aligned medium icon header">
  <i class="circular red wechat icon"></i>
  Say Something
</h4>

<div class="ui two column grid">

    <div class="twelve wide column">

    <div class="ui fluid raised card chatbox">
      <div class="content" id="messages-overflow">
          <div class="ui feed" id="message-container" data-channel="ChatroomChannel">
             <%= render @messages %>


          </div>
        </div>

        <div class="extra content">
        <%= form_for @message, html: { class: "ui reply form" }, url: message_path do |f| %>

            <%= render 'layouts/messages', f: f.object %>
              <div class="field">
                <div class="ui fluid icon input">

                <%= f.text_field :body, placeholder: "Enter a message..." %>

                  <%= f.button '<i class="bordered inverted red location arrow icon"></i>'.html_safe   %>



                </div>
              </div>

          <% end %>
        </div>
      </div>
    </div>





    <div class="four wide column">

      <div class="ui fluid raised card chatbox">
        <div class="content">
          <div class="ui inverted vertical menu">
            <a class="active item">
              Home
            </a>
            <a class="item">
              Messages
            </a>
            <a class="item">
              Friends
            </a>
          </div>
        </div>
      </div>
    </div>
</div>
